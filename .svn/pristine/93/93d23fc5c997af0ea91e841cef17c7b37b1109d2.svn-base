@font-face
  font-family: 'Quark-Bold'
  src: url('/assets/fonts/Quark-Bold.eot') format('eot')
  src: url('/assets/fonts/Quark-Bold.woff2') format('woff2')
  src: url('/assets/fonts/Quark-Bold.woff') format('woff')
  src: url('/assets/fonts/Quark-Bold.ttf') format('truetype')
  src: url('/assets//fonts/Quark-Bold.svg#Quark-Bold') format('svg')
  src: url('/assets/fonts/Quark-Bold.eot?#iefix') format('embedded-opentype')
  font-weight: normal
  font-style: normal

.logo
  padding-top: 0 !important
  img
    width: 100.2%
.container
  max-width: 1260px
  width: 100%
  margin: 25px auto 
  padding: 20px 35px

.color-blue
  color: #2AA8D3
.product-recommend-wrapper
  .recommend
    line-height: 0
    margin: 10px 0 10px 0
    .recommend-header
      font-size: 80px
      color: #0098c8
      margin-bottom: 10px
  .recommend-label
    font-size: 32px
    color: #0098c8
    color: #B2B2B2
  .product-type-table
    width: 100%
    .product-row-line
      width: 50%
    .product-line
      background: #F0EFEF
      border: 5px solid #F0EFEF
    .product-row-type
      width: auto
      .product-type
        font-size: 30px
        color: #9B9B9B
        padding-left: 40px
    .product-type-icon img
      margin: -18px
      display: none
  .product-card
    background: #FFFFFF
    box-shadow: 0 0 4px 0 rgba(0, 0, 0, 0.2)
    margin-right: 78px
    .product-card-img
      display: inline-block
      img
        width: 200px
    .product-card-detail
      display: inline-block
      padding: 15px
      .header-card
        font-size: 30px
      .label-card
        font-size: 14px
        color: #B2B2B2
      .btn-readmore
        background: linear-gradient(90deg, #00C9E6, #00C4E3, #0098C8)
        color: #fff
        width: 160px
  .product-paper-ic
    display: inline-block
    margin-left: 60px
  .product-list-ul
    list-style: none
    padding: 0 
    .product-list
      width: 45%
      display: inline-block
      margin: 10px 0
      .product-list-arrow
        display: inline-block
        vertical-align: top
      .product-list-detail
        display: inline-block
        vertical-align: middle
        .product-list-label
          font-size: 12px
          color: #B2B2B2
  .news-product-icon
    margin: 0 -32px
    display: none
  .news-product-image
    text-align: center
    img
      width: 360px
  .news-product-label
    font-size: 14px
    color: #B2B2B2
  .btn-read-data
    background: linear-gradient(90deg, #00C9E6, #00C4E3, #0098C8)
    color: #fff
  .news-product-banner
    text-align: center
    padding: 20px 0
.product
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  .sa-product
    font-size: 30px
  .name-product
    font-size: 30px

#detail-wrapper
  .detail-image-main-l1
    border: 1px solid #999999
    img
      width: 100%
      height: 540px
  .detail-icon-list
    margin: 20px 0
    .icon-list
      background-color: #332A87
      border-radius: 50%
      border: 1px solid grey
      padding: 8px 
    .icon-label
      font-size: 13px
    .icon-detail
      font-size: 12px
      color: #0098C8
  .detail-image-footer-l1
    .r1
      width: 100%
      height: 230px
    .product
      background: #0098C8
      text-align: center
      padding: 25px
    .sa-product
      font-size: 60px
      color: #322F85
    .name-product
      font-size: 50px
      color: #ffffff
  .detail-image-main-r1 img
    width: 100%
    height: 110px
  .highlight-word
    color: #0098C8
  .detail-list-01
    margin: 15px 0
    .detail-list-ul
      margin: 15px 0 40px
      list-style: none
      padding: 0
      li
        line-height: 1.5
      .icon
        color: #0098c8
        margin: 5px 5px 0 0
        font-size: 16px
        display: inline-block
  .detail-list-02
    .detail-list-header
      color: #332A87
    .detail-list-ul
      height: 300px
      overflow-y: scroll
      &::-webkit-scrollbar-track
        -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3)
        background-color: #F5F5F5
      &::-webkit-scrollbar
        width: 1px
        background-color: #F5F5F5
      &::-webkit-scrollbar-thumb
        background-color: #0ae
        background-image: -webkit-gradient(linear, 0 0, 0 100%, color-stop(0.5, rgba(255, 255, 255, 0.2)), color-stop(0.5, transparent), to(transparent))


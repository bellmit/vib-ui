
<div class="row m-0 col-lg-12">
    <div class="col-lg-3">
        <img src="./assets/kiatnakin/image/login/icon_userpassword_topic.png">
    </div>
    <div class="col-lg-9">
        <label class="display-2 text-bold">UserName & Password</label> <br>
        <label class="display-5">กรุณากรอก Username และ Password ของท่าน</label>
    </div>
    <div class="row col-lg-12 mt-5">
        <div class="display-3 col-lg-6">
            {{ 'username' | translate }}
        </div>
        <div class="display-3 col-lg-6">
            {{ 'password' | translate }}
        </div>
        <div class="display-3 col-lg-6 mt-3">
            <input  id="username"
                    type="text"
                    name="username"
                    keyboard="en"
                    style="margin: 0 auto; width: 100%"
                    class="text-center"
                    maxlength="15"
                    autocomplete="off"
                    [(ngModel)]="userLogin.username">
        </div>
        <div class="display-3 col-lg-6 mt-3">
            <input id="password"
                   type="text"
                   name="security-dot"
                   keyboard="en"
                   style="margin: 0 auto; width: 100%"
                   class="text-center"
                   maxlength="15"
                   autocomplete="off"
                   [(ngModel)]="userLogin.password">
        </div>
    </div>
    <div class="col-lg-12 text-center mt-5">
        <button id="button_login"
                type="submit"
                class="button-submit button-blue  display-3"
                (click)="onClickLogin()"
                [disabled]="!userLogin.username || !userLogin.password">
            <h2>{{ 'ok' | translate}}</h2>
        </button>
    </div>
</div>
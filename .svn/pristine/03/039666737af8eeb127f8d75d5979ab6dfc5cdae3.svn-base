@import "./src/styles-master"

$height-header: 45px
$content-header-color: #059DA6
$content-footer-border-color: #332A87
.container
  padding: 0px
  width: 970px
.page1200
  height: 950px
  top: 50px
  background-color: #332A87
  border-radius: 10px

.header
  position: absolute
  top: 0px
  left: 0px
  right: 0px
  overflow: hidden
  height: $height-header
  background-color: transparent
  display: flex
  align-items: center
  justify-content: center
.footer
  position: absolute
  bottom: 0px
  left: 0px
  right: 0px
  overflow: hidden
  height: $height-header
  background-color: transparent
  @extend .shadow
.wrapper
  border-radius: 10px
  position: absolute
  top: $height-header
  bottom: $height-header
  left: 0px
  right: 0px
  overflow: hidden
  background: white
  .header
    background-color: $content-header-color
  .content
    .body
      top: 0px
      bottom: 110px
      left: 0px
      right: 0px
      overflow: hidden
      border-radius: 0px
      .scroll
        overflow: auto
        top: 0px
        bottom: 115px
        left: 0px
        right: 0px
        position: absolute
        padding-top: 30px
    .footer
      display: flex
      align-items: center
      justify-content: center
      height: 110px
      border-radius: 0px 0px 10px 10px
      -moz-border-radius: 0px 0px 10px 10px
      -webkit-border-radius: 0px 0px 10px 10px
      border-bottom: 1px solid #332A87
      border-top: 1px solid #332A87
      bottom: 3px
      button
        @extend .shadow

.button-blue
  width: 370px
  height: 80px

.body-border
  bottom: 112px !important
  position: absolute
.row
  margin: 0px
  padding: 0px
.border-right
  border-right: 1px solid $content-footer-border-color

.transaction
  height: 60px

input[type=radio],
input[type=checkbox]
  width: 30px !important
  height: 30px !important
  position: absolute
  background-size: 30px !important

.triangle-up
  width: 0
  height: 0
  border-left: 20px solid transparent
  border-right: 20px solid transparent
  border-bottom: 20px solid white

.odd
  background-color: rgba(255, 249, 192, 0.1)

.select
  background: rgba(0, 152, 200, 0.32)
  border-bottom: 1px solid gray

